  setting-b(setting-name='settings.public', icon-cls='unlock-img', text='Public Room', master='player.master')
  setting-b(setting-name='settings.allowPlural', icon-cls='addfile-img', text='Allow Plural', master='player.master')
  setting-b(setting-name='settings.negativePoints', icon-cls='minus-img', text='Enable Penalties', master='player.master')
