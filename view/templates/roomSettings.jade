#publicField
  input(type='checkbox', name='public', ng-model='public', ng-change='changePublic()')
  label(for='public') Public Room
form#invites(ng-submit='invite()', name='inviteForm', class='form-horizontal')
  label(for='invite') Invite
  input(type='text', name='invite', ng-model='invite', class='form-control')
  button(type='submit', class='btn btn-default') Invite
#settingsDiv
  a.toggler(href='', ng-click='toggleSettings()') Settings
  form.toggled(name='roomSettingsForm', ng-submit='changeSettings()', class='form-control')
    label(for='timeLimit') Time Limit
      input(type='text', name='timeLimit', size='3', value='90')
    label(for='minWordLength') Min Word Length
      input(type='text', name='minWordLength', size='1', value='3')
    label(for='allowPlural') Allow Plural
      input(type='checkbox', name='allowPlural')
    label(for='negativePoints') Negative Points
      input(type='checkbox', name='negativePoints')
    label(for='restartAllowed') Vote Restart Allowed
      input(type='checkbox', name='restartAllowed')
    button(type='submit', class='btn btn-primary') Change Settings