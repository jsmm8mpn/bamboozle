  .setting-c Time Limit
    .setting-o(ng-class='{"true": settings.timeLimit == 30}', ng-click='settings.timeLimit = 30') 30
    .setting-o(ng-class='{"true": settings.timeLimit == 60}', ng-click='settings.timeLimit = 60') 60
    .setting-o(ng-class='{"true": settings.timeLimit == 90}', ng-click='settings.timeLimit = 90') 90
    .setting-o(ng-class='{"true": settings.timeLimit == 120}', ng-click='settings.timeLimit = 120') 120
    .setting-o(ng-class='{"true": settings.timeLimit == 150}', ng-click='settings.timeLimit = 150') 150
    .setting-o(ng-class='{"true": settings.timeLimit == 180}', ng-click='settings.timeLimit = 180') 180
