div.playerResult(ng-repeat='(playerId, result) in results')
  h3 {{players[playerId].name}}
  h4 {{result.score}}
  li(ng-repeat='(word, scored) in result.words track by $index')
    div(ng-switch='scored')
      div(ng-switch-when='true', class='scored') {{word}}
      div(ng-switch-default, class='unscored') {{word}}

