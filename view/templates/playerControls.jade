#startDiv
  input.button(type='button', value='Ready', ng-click='ready()')
#quitDiv
  input.button(type='button', value='Vote Quit', ng-click='quit()')

#publicField.field
  label(for='public') Public Room:
  input(type='checkbox', name='public', ng-model='public', ng-change='changePublic()')
#settingsDiv
  a.toggler(href='#') Settings
  .toggled
    .setting(name='timeLimit') Time Limit
      input(type='text', name='timeLimit', size='3', value='90')
    .setting(name='minWordLength') Min Word Length
      input(type='text', name='minWordLength', size='1', value='3')
    .setting(name='allowPlural') Allow Plural
      input(type='checkbox', name='allowPlural')
    .setting(name='negativePoints') Negative Points
      input(type='checkbox', name='negativePoints')
    .setting(name='restartAllowed') Vote Restart Allowed
      input(type='checkbox', name='restartAllowed')
    input.button(type='button', value='Change Settings')