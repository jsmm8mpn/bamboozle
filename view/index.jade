  body
    #mainDiv
      table
        tr
          td 
            #timer 
            #board
            input#wordInput(type='text', style='display: none;', onkeypress='return submitWord(event)')
            #wordResult
          td
            #wordList
    #results(style='display:none;')
    #startDiv(style='display:none;')
      input(type='button', name='ready', value='Start', onclick='javascript:ready()')
    #quitDiv(style='display:none;')
      input(type='button', name='quit', value='Vote Quit', onclick='javascript:voteQuit()')

    #settingsDiv
      a(href='javascript:$("#innerSettingsDiv").toggle()') Settings
      #innerSettingsDiv(style='display:none')
        .setting(name='timeLimit') Time Limit
          input(type='text', name='timeLimit', size='3', value='90')
        .setting(name='minWordLength') Min Word Length
          input(type='text', name='minWordLength', size='1', value='3')
        .setting(name='allowPlural') Allow Plural
          input(type='checkbox', name='allowPlural')
        .setting(name='negativePoints') Negative Points
          input(type='checkbox', name='negativePoints')
        .setting(name='restartAllowed') Vote Restart Allowed
          input(type='checkbox', name='restartAllowed')
        input(type='button', name='start', value='Change Settings', onclick='javascript:changeSettings()')
        
    script(src='javascripts/index.js')
